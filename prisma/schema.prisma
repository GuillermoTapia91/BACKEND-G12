generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id Int @id @default(autoincrement())
  nombre String 
  apellido String? //Indicamos que la columna puede tener valores nulos
  email String @unique //Con el @ agregamos configuraciones adicionales de la columna
  password String @db.Text // Le indico el tipo de dato exacto que yo quiero utilizar sino utilizar el tipo de dato por defecto
  tipoUsuario TipoUsuario @map("tipo_usuario")

  direcciones Direccion[] //Usuario va a tener varias Direcciones (por eso es un arreglo)
  // @@ sirve para modificar configuraciones DE LA TABLA
  @@map("usuarios")

}

model Direccion {
  id Int @id @default(autoincrement())
  calle String
  numero Int
  referencia Int?
  departamento String?
  usuarioId Int @map("usuario_id")

  usuario Usuario @relation(fields: [usuarioId],references: [id])

  @@map("direcciones")
}

model Producto {
  id Int @id @default(autoincrement())
  nombre String 
  precio Float
  imagen String?
  disponible Boolean @default(true)
  @@map("productos")
}

enum TipoUsuario {
  ADMIN
  CLIENTE
}